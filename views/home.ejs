<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('./layout/navbar') %>

    <main class="container my-4">
      <h1 class="mb-4">Home</h1>

      <% if (!blogs || blogs.length === 0) { %>
      <div class="alert alert-info">No blogs found.</div>
      <% } else { %>
      <div class="row g-3">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-md-6">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.des %></p>

              <% if (blog.writer) { %>
              <p class="text-muted mb-0">By: <%= blog.writer %></p>
              <% } %>
            </div>

            <div class="card-footer bg-transparent border-top-0">
              <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary"
                >Read</a
              >
              <% if (user && (user._id == blog.writerId || user.role?.name ==
              "admin" || user.role?.name == "manager")) { %>
              <a
                href="/blog/edit/<%= blog._id %>"
                class="btn btn-sm btn-outline-warning"
              >
                Edit
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
